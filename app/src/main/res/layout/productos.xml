<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvArticuloEstatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estatus del Articulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ivArticulo"
        app:layout_constraintTop_toBottomOf="@+id/tvArticuloCategoria" />

    <TextView
        android:id="@+id/tvArticuloCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Categoria del Articulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toEndOf="@+id/ivArticulo"
        app:layout_constraintTop_toBottomOf="@+id/tvArticuloEstado" />

    <TextView
        android:id="@+id/tvArticuloEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado del Articulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivArticulo"
        app:layout_constraintTop_toBottomOf="@+id/tvPropietario" />

    <ImageView
        android:id="@+id/ivArticulo"
        android:layout_width="150dp"
        android:layout_height="149dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvArticulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Articulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivArticulo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPropietario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Propietario"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/ivArticulo"
        app:layout_constraintTop_toBottomOf="@+id/tvArticulo" />

    <TextView
        android:id="@+id/tvArticuloCreacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Creacion del Articulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivArticulo"
        app:layout_constraintTop_toBottomOf="@+id/tvArticuloEstatus" />

</androidx.constraintlayout.widget.ConstraintLayout>